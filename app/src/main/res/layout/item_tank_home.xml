<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/layout_root">

    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView_tank"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:wlv_borderColor="@color/colorGreen"
        app:wlv_borderWidth="3dp"
        app:wlv_progressValue="75"
        app:wlv_round_rectangle="true"
        app:wlv_shapeType="circle"
        app:wlv_titleCenter="75%"
        app:wlv_titleCenterColor="@android:color/white"
        app:wlv_titleCenterSize="14sp"
        app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleCenterStrokeWidth="3dp"
        app:wlv_triangle_direction="north"
        app:wlv_waveAmplitude="70"
        app:wlv_waveColor="@color/colorGreen" />
    <TextView
        android:id="@+id/txt_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTop"
        android:textSize="@dimen/size16"
        android:text="Bá»“n A95"/>

</LinearLayout>