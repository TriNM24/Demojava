<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cus_border_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/header_nofity"
        android:textColor="@drawable/bright_text_dark_focused"
        android:text="Chọn ảnh upload"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/btn_album"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="60dp"
            android:background="@drawable/selector_no_border"
            android:clickable="true"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/image_state_upload" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Album"
                android:textSize="@dimen/size17"
                android:textColor="@drawable/bright_text_dark_focused" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_camera"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="60dp"
            android:background="@drawable/selector_no_border"
            android:clickable="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/image_state_upload" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Camera"
                android:textSize="@dimen/size17"
                android:textColor="@drawable/bright_text_dark_focused" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>